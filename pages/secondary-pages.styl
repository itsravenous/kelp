.secondary-header
  margin 0 auto
  max-width 1090px
  height 150px
  font-size 20px
  color #fff
  padding 0 5vw
  h1
    line-height 150px
    font-size 40px

.secondary-nav-btn
  height 60px
  color #DFDFDF
  font-size 16px
  font-weight 400
  text-transform none
  margin 0
  padding 0 10px
  background-color transparent
  border-radius 0px
  transition background-color 0.2s
  &.active
    color #fff
    background-color LIME_GREEN

.secondary-bg
  background-color OPAQUE_AQUA
  padding 0 5vw 50px 5vw
  min-height 830px
  overflow auto
  .secondary-content
    margin 0 auto
    max-width 1090px
    color #DFDFDF
    nav
      margin-bottom 40px
      button, a
        @extend .secondary-nav-btn
    h1
      font-weight 300
      font-size 36px
      line-height 1.2em
      margin-bottom 30px
      color #fff
      a
        font-size 30px
        font-style normal
        text-decoration none
        &:hover
          text-decoration underline
    h2
      margin 0 0 10px 0
      font-style italic
      font-size 14px
      font-weight 700
      color #515151
    p
      line-height 1.5em
      font-size 16px
      font-weight 400
      margin-bottom 20px
    img
      width 100%
    .team-member
      overflow auto
      img
        width 150px
        height 150px
        border-radius 5px
        float left
        vertical-align middle
        margin 0 20px 20px 0
      p
        margin 0
        max-width 500px
        float left
    a
      color LIME_GREEN
      text-decoration underline
      font-style italic
      font-weight 400
    .left-column, .right-column
      float left
    .left-column
      width 66%
      .content
        padding-right 30px
    .right-column
      width 33%
      button
        width 100%
        margin 20px 0
        height 60px
        font-size 14px
        border-radius 5px
        color #fff
        text-transform uppercase
        font-weight 800
        letter-spacing 2px
        background-color LIME_GREEN
        &:active
          position relative
          top 1px

@media screen and (max-width: 820px)
  .secondary-bg
    .secondary-content
      .right-column, .left-column
        width 100%
        .content
          padding 0
